<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.intelligentmusicplayer.android">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MusicShowing"></activity>

        <service
            android:name=".HeartbeatService"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name=".MotionDetectorService"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name=".stepcount.StepCountService"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name=".musicplaying.MusicPlayingService"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".MainActivity"
            android:label="IntelligentMusicPlayer">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>